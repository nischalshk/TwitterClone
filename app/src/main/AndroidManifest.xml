<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aboveall.twitterclone">

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".BtmNav"
            android:label="@string/title_activity_btm_nav">

        </activity>
        <activity android:name=".activities.registerActivities.RegisterActivityFifthStep" />
        <activity android:name=".activities.registerActivities.RegisterActivityFourthStep" />
        <activity android:name=".activities.registerActivities.RegisterActivityThirdStep" />
        <activity android:name=".activities.webviewActivities.WebViewHelp" />
        <activity android:name=".activities.webviewActivities.WebViewPP" />
        <activity android:name=".activities.webviewActivities.WebViewPO" />
        <activity android:name=".activities.webviewActivities.WebViewTerms" />
        <activity android:name=".activities.webviewActivities.WebViewCookie" />
        <activity android:name=".activities.registerActivities.RegisterActivitySecondStep" />
        <activity android:name=".activities.registerActivities.RegisterActivityPhone" />
        <activity android:name=".activities.registerActivities.RegisterActivityEmail" />
        <activity android:name=".activities.LoginActivity" />
        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.GettingStartedActivity" />
    </application>


</manifest>